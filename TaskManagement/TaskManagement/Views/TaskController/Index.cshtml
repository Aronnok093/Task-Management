@model IEnumerable<TaskManagement.Models.Task>

@{
    ViewBag.Title = "Task List";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout
}

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Is Completed</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = task.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = task.Id }, new { onclick = "return confirm('Are you sure you want to delete this task?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
